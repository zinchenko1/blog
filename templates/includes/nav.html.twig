<header id="header">
    <div id="nav">
        <div id="nav-fixed">
            <div class="container">
                <div class="nav-logo">
                    <a href="{{ path('index') }}" class="logo">
                        <img src="/img/logo.png" alt="" style="width: 60px;height: 50px">
                    </a>
                </div>

                {{ knp_menu_render('nav', {'currentClass': 'active'}) }}

                <div class="nav-btns">
                    <button class="aside-btn"><i class="fa fa-bars"></i></button>

                    <button class="search-btn"><i class="fa fa-search"></i></button>

                    <div class="search-form">
                        {{ render(controller('App\\Controller\\SearchController::renderSearchForm')) }}
                    </div>
                    <div class="register-button">
                        {% if app.user %}
                            <a class="btn btn-warning" href="{{ path('easyadmin') }}">Admin Panel</a>
                            <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
                        {% else %}
                            <a class="btn btn-success" href="{{ path('app_login') }}">Sign in</a>
                            <a class="btn btn-info" href="{{ path('app_register') }}">Register</a>
                        {% endif %}
                    </div>
                </div>


            </div>
        </div>

        <div id="nav-aside">
            <div class="section-row">
                {{ knp_menu_render('navMobile', {'currentClass': 'active'}) }}
            </div>

            <div class="section-row">
                <h3>Recent Posts</h3>

                {{ render(controller('App\\Controller\\PostController::renderRecentPost')) }}

            </div>

            <div class="section-row">
                <h3>Follow us</h3>
                <ul class="nav-aside-social">
                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                </ul>
            </div>

            <button class="nav-aside-close"><i class="fa fa-times"></i></button>
        </div>
    </div>
</header>
